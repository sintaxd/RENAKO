<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PengaturanActivity"
    tools:layout_editor_absoluteY="50dp">

    <ImageView
        android:id="@+id/imgPerson_Setting"
        android:layout_width="56dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/person"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="68dp" />

    <ImageView
        android:id="@+id/imgLock_Setting"
        android:layout_width="57dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/imgPerson_Setting"
        app:srcCompat="@drawable/lock"
        tools:layout_editor_absoluteX="48dp" />

    <TextView
        android:id="@+id/txtUbahKataSandi_Pengaturan"
        android:layout_width="174dp"
        android:layout_height="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Ubah Password"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toEndOf="@+id/imgLock_Setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <TextView
        android:id="@+id/txtUbahProfile_Pengaturan"
        android:layout_width="172dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Ubah Profile"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgPerson_Setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

</android.support.constraint.ConstraintLayout>